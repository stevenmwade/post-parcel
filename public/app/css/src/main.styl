body
  font-family 'Lato', 'HelveticaNeue-Light', sans-serif

.menu
  list-style none
  border-bottom 0.1em solid black
  margin-bottom 2em
  padding 0 0 0.5em
  &:before
    content "["
  &:after
    content "]"
  & > li
    display inline
    &:before
      content "|"
      padding-right 0.3em
    &:nth-child(1):before
      content ""
      padding 0

.navbar-container
  max-width 1000px

.navbar
  margin-bottom 0

.navbar
  &.navbar-custom
    background-color #21865A
    border-bottom none
    -moz-box-shadow 0 0 5px rgba(0,0,0,0.40)
    -webkit-box-shadow 0 0 5px rgba(0,0,0,0.40)
    box-shadow 0 0 5px rgba(0,0,0,0.40)
  
.navbar-custom 
  .navbar-nav
    & > li
      & > a
          color #FFF
     
.navbar-custom 
  .navbar-nav
    & > li
      & > a
        &:hover
          color #CCC

.navbar-brand
  color #FFF
  font-size 2em

.container
  position relative
  // top 85px

.container-fluid
  &.view
    position relative
    top 85px

.sidebar-nav
  height calc(100vh - 51px)
  width 22%
  background-color #FFF
  -moz-box-shadow 2px 0 10px rgba(0,0,0,0.10)
  -webkit-box-shadow 2px 0 10px rgba(0,0,0,0.10)
  box-shadow 2px 0 10px rgba(0,0,0,0.10)

.sidebar-style
  border-bottom solid 3px #21865A
  margin-left 60px
  margin-right 45px
  

.sidebar-title
  text-transform uppercase
  
.sidebar-body
  height 70%

.sidebar-footer
  padding 30px 10px 10px 25px

.section-selector
  text-align center
  img
    margin-top 10px

.front
  margin-top 30px
  position relative
  &:hover
    .back
      display block

.highlighted
  display none
  height 500px
  width 360px
  background-color rgba(176, 71, 85,.75)
  color #fff
  position absolute
  top 0
  left 0
  margin 0 15px
  -moz-box-shadow inset 0 0 10px rgba(0,0,0,0.40)
  -webkit-box-shadow inset 0 0 10px rgba(0,0,0,0.40)
  box-shadow inset 0 0 10px rgba(0,0,0,0.40)

.back
  padding 50% 0

.thumbnail-name
  text-align center
  h2
    margin-bottom 20px

.thumbnail-cta
  text-align center

.panel-default
  & > .panel-heading
    background-color #EFEFEF
    border none
    box-shadow none

.panel-group
  background-color #EFEFEF
  .panel
    & + .panel
      margin-top 0

.edit-items,
.template-items
  display none

.edit-container
  background-color #EEE
  // height calc(100vh - 51px)
  // height 100%

#drop-zone
  min-width 600px
  min-height 300px
  background-color #FFF
  padding-top 15px
  position relative
  margin-top 5%
  margin-bottom 5%
  
.edit-holder
  height calc(100vh - 51px)
  overflow scroll

.drop-hover
  border solid 1px #9C9C9C

.pieces
  z-index 150
  margin-top 10px
  text-align center

.col-sm-2
  &.sidebar
    padding 0

.template-holder
  height 900px
  
.navbar-form
  .form-group
    margin-left 10px
  button
    margin-left 10px
  a
    margin-left 10px

.section-btns
  display none

.section-btns
  & > div
    height 30px
    width 30px
    position absolute
    font-size 1.5em
    z-index 9999
    top 40%
    background-color #000
    // color #69c9a3
    // color #a0f7d4
    color #FFF
    
.section-btns
  & > div
    &:hover
      // color hsl(156, 47%, 50%)
      // color #69c9a3
      background-color #8ae2bf
      color #FFF
  
.remove
  left 95.9%
  // padding-right -150px

.hero
  position relative

.send-btn
  width 175px
  background-color #FFF
  color #000
  font-weight 500
  border solid 1px #000

.send-btn
  &:hover
    background-color #21865A
    color #FFF
    border solid 1px #21865A
  

